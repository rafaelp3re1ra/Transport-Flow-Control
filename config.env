# Network Conditions (tc netem parameters)
# Set to empty or comment out to disable specific conditions
# DELAY: Network latency (e.g., 50ms, 100ms, 200ms)
# JITTER: Variance in delay (e.g., 10ms, 20ms) - leave empty to disable
# LOSS: Packet loss percentage (e.g., 1%, 5%, 10%)
# BANDWIDTH: Link bandwidth limit (e.g., 1mbit, 5mbit, 10mbit, 100mbit)
DELAY=50ms
JITTER=20ms
LOSS=1%
BANDWIDTH=5mbit

# Test Duration (seconds)
# Duration of each protocol test in seconds (e.g., 10, 30, 60)
TEST_DURATION=120

# Number of QUIC transfers
# How many parallel QUIC streams to use (e.g., 1, 5, 10)
QUIC_TRANSFERS=20

# QUIC data size (in MiB)
# Amount of data to transfer per QUIC stream in MiB (e.g., 1, 5, 10)
# Note: Server has 10MB test file, so max is 10
QUIC_DATA_SIZE_MB=5

# TCP (BBR/CUBIC) iperf3 parameters
# TCP_PARALLEL_STREAMS: Number of parallel TCP streams (e.g., 1, 4, 8)
# TCP_WINDOW_SIZE: TCP buffer/window size (e.g., 64K, 128K, 256K, 1M) - leave empty for auto
TCP_PARALLEL_STREAMS=5
TCP_WINDOW_SIZE=
